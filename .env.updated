# MinIO Configuration (Native deployment)
MINIO_ACCESS_KEY=neuroinsight_minio
MINIO_SECRET_KEY=secure_minio_secret_change_in_production
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET=neuroinsight
MINIO_USE_SSL=false

